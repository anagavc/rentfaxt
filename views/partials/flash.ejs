<!-- setting up a flash message for when a success exists and it has a length -->
<% if(success && success.length) {%>
<div class="alert alert-success alert-dismissible fade show flash" role="alert">
    <%=success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>

<% } %>
<!-- setting up a flash message for when an error exists and it has a length -->
<% if(error && error.length) {%>
<div class="alert alert-danger alert-dismissible fade show flash" role="alert">
    <%=error%>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>

<% } %>