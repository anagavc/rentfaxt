<% layout('layouts/adminBoilerplate')%>

<section class="container  u-margin-top-big">
    <h3 class="secondary-heading">Hero Settings</h3>

    <div class="login mx-auto mt-5">
        <div class="login__details">
            <form action="editHeroPage/<%=hero._id%>?_method=PUT" method="POST" enctype="multipart/form-data" novalidate
                class="validated-form">
                <div class="login__username mt-5">
                    <label for="heroImage" class="">Hero Image</label>
                    <input class="form-control" type="file" name="heroImage" placeholder="Choose file" id="heroImage">
                </div>

                <div class="login__username">
                    <label for="mainCaption" class="">Main Caption</label>
                    <input type="text" name="mainCaption" placeholder="Main caption" value="<%=hero.mainCaption%>"
                        id="mainCaption" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="login__username">
                    <label for="subCaption" class="">Sub caption</label>
                    <input type="text" name="subCaption" placeholder="Sub caption" value="<%=hero.subCaption%>"
                        id="subCaption" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <a href="overview" class="login__btn login__btn-save mx-auto">Cancel</a>
                <button class="login__btn login__btn-save ms-auto">Save</button>
            </form>
        </div>
    </div>
    </div>
</section>