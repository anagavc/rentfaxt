<% layout('layouts/adminBoilerplate')%>

<h3 class="secondary-heading mt-5">Subscribers</h3>

<section class="container subscribers mt-5">
    <div class="table-responsive">

        <table class="table admin__table">
            <thead>
                <tr>
                    <th scope="col">Email Address</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% for( let subscriber of subscribers ) { %>
                <tr>
                    <td><%= subscriber.email %> </td>
                    <td>
                        <a class="card-button card-button__listing edit-button"
                            href="mailto:<%= subscriber.email %>">Send Mail</a>
                    </td>
                </tr>
                <% } %>

            </tbody>
        </table>
    </div>












</section>
<div class="back-button u-margin-top-huge">
    <a class="about-button back-button-btn" href="overview">Back</a>
</div>