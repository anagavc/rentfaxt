<% layout('layouts/adminBoilerplate')%>

<h3 class="secondary-heading mt-5">Users</h3>

<section class="container subscribers mt-5">
    <div class="table-responsive">

        <table class="table admin__table">
            <thead>
                <tr>

                    <th scope="col">Username</th>
                    <th scope="col">Email Address</th>
                    <th scope="col">Mobile Number</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% for( let user of users) { %>
                <tr>


                    <td><%= user.username %> </td>
                    <td><%= user.email %> </td>
                    <td><%= user.mobile %> </td>

                    <td>
                        <form action="users/<%= user._id %>?_method=DELETE" method="POST" class="card__form">
                            <button class="card-button card-button__listing delete-button">Delete</button>
                        </form>
                    </td>
                </tr>
                <% } %>

            </tbody>
        </table>
    </div>












</section>
<div class="back-button u-margin-top-huge">
    <a href="overview" class="about-button back-button-btn">Back</a>

</div>