<% layout('layouts/boilerplate')%>

<header class="hero">
    <div class="hero__text">
        <h1 class="heading">
            <span class="heading heading-top"><%= hero.mainCaption %> </span>
            <span class="heading heading-bottom"> <%= hero.subCaption %></span>
        </h1>
    </div>

    <a class="hero__button" href="register">
        Get started
    </a>
</header>
<main>
    <section class="about container" id="about">
        <div class="title">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-book"
                viewBox="0 0 16 16">
                <path
                    d="M1 2.828c.885-.37 2.154-.769 3.388-.893 1.33-.134 2.458.063 3.112.752v9.746c-.935-.53-2.12-.603-3.213-.493-1.18.12-2.37.461-3.287.811V2.828zm7.5-.141c.654-.689 1.782-.886 3.112-.752 1.234.124 2.503.523 3.388.893v9.923c-.918-.35-2.107-.692-3.287-.81-1.094-.111-2.278-.039-3.213.492V2.687zM8 1.783C7.015.936 5.587.81 4.287.94c-1.514.153-3.042.672-3.994 1.105A.5.5 0 0 0 0 2.5v11a.5.5 0 0 0 .707.455c.882-.4 2.303-.881 3.68-1.02 1.409-.142 2.59.087 3.223.877a.5.5 0 0 0 .78 0c.633-.79 1.814-1.019 3.222-.877 1.378.139 2.8.62 3.681 1.02A.5.5 0 0 0 16 13.5v-11a.5.5 0 0 0-.293-.455c-.952-.433-2.48-.952-3.994-1.105C10.413.809 8.985.936 8 1.783z" />
            </svg>
            About Us
            <p class="title-sub">
                Information about our organization
            </p>
        </div>
        <div class="about__information">
            <div class="about__information about__information-right">
                <p class="right-text">
                    <%= about.aboutText %>
                </p>
                <a class="about-button" href="about">Read more</a>
            </div>
            <div class="about__information about__information-left">
                <img class="img-fluid about-image" src="<%=about.aboutImage.url%>" alt="about-image">
            </div>
        </div>

    </section>
    <section class="services container" id="services">
        <div class="title">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart-check"
                viewBox="0 0 16 16">
                <path
                    d="M11.354 6.354a.5.5 0 0 0-.708-.708L8 8.293 6.854 7.146a.5.5 0 1 0-.708.708l1.5 1.5a.5.5 0 0 0 .708 0l3-3z" />
                <path
                    d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zm3.915 10L3.102 4h10.796l-1.313 7h-8.17zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0z" />
            </svg>
            Services
            <p class="title-sub">
                Some services we offer
            </p>
        </div>
        <div class="service">
            <% for( let service of services ) { %>
            <div class="service__information">
                <div class="service__information-image">
                    <img class="img-fluid" src="<%= service.serviceImage.url %>" alt="">
                </div>
                <div class="service__information-title">
                    <%= service.serviceTitle%>
                </div>
                <div class="service__information-text mt-5">
                    <p><%= service.serviceDescription%></p>
                </div>
                <% if (  service.serviceTitle=== 'Property Management') { %>
                <a class="card-button" href="service/property">View</a>
                <% } else if (service.serviceTitle=== 'Brokerage') { %>
                <a class="card-button" href="service/brokerage">View</a>
                <% } else {%> <a class="card-button" href="service/land">View</a><%}%>



            </div>
            <% } %>



            </div>



    </section>
    <section class="reviews" id="reviews">
        <div class=" title title-review">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chat-quote"
                viewBox="0 0 16 16">
                <path
                    d="M2.678 11.894a1 1 0 0 1 .287.801 10.97 10.97 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8.06 8.06 0 0 0 8 14c3.996 0 7-2.807 7-6 0-3.192-3.004-6-7-6S1 4.808 1 8c0 1.468.617 2.83 1.678 3.894zm-.493 3.905a21.682 21.682 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a9.68 9.68 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105z" />
                <path
                    d="M7.066 6.76A1.665 1.665 0 0 0 4 7.668a1.667 1.667 0 0 0 2.561 1.406c-.131.389-.375.804-.777 1.22a.417.417 0 0 0 .6.58c1.486-1.54 1.293-3.214.682-4.112zm4 0A1.665 1.665 0 0 0 8 7.668a1.667 1.667 0 0 0 2.561 1.406c-.131.389-.375.804-.777 1.22a.417.417 0 0 0 .6.58c1.486-1.54 1.293-3.214.682-4.112z" />
            </svg>
            Reviews
            <p class="title-sub title-sub__review">
                What our clients say
            </p>
        </div>
        <div class="review">
            <div id="reviewControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <% reviews.forEach((review,i)=>{%>
                    <div class="carousel-item <%= i=== 0 ? 'active':''%>">

                        <div class="review__information">
                            <img src="<%= review.reviewImage.url%> " alt=""
                                class="img-fluid review__avatar img-rounded">
                            <div class="review__information-name mx-2">
                                <%= review.reviewer%>
                            </div>
                            <div class="review__information-comment">
                                <%= review.review%>
                            </div>
                        </div>
                    </div>
                    <% })%>
                </div>
                <button class="carousel-control-prev " type="button" data-bs-target="#reviewControls"
                    data-bs-slide="prev">
                    <span class="review__button review__button-prev" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#reviewControls"
                    data-bs-slide="next">
                    <span class="review__button review__button-next" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </section>
    <section class="faqs container" id="faqs">
        <div class="title">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                class="bi bi-question-circle" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                <path
                    d="M5.255 5.786a.237.237 0 0 0 .241.247h.825c.138 0 .248-.113.266-.25.09-.656.54-1.134 1.342-1.134.686 0 1.314.343 1.314 1.168 0 .635-.374.927-.965 1.371-.673.489-1.206 1.06-1.168 1.987l.003.217a.25.25 0 0 0 .25.246h.811a.25.25 0 0 0 .25-.25v-.105c0-.718.273-.927 1.01-1.486.609-.463 1.244-.977 1.244-2.056 0-1.511-1.276-2.241-2.673-2.241-1.267 0-2.655.59-2.75 2.286zm1.557 5.763c0 .533.425.927 1.01.927.609 0 1.028-.394 1.028-.927 0-.552-.42-.94-1.029-.94-.584 0-1.009.388-1.009.94z" />
            </svg>
            Frequently asked questions
            <p class="title-sub">
                Some frequently asked questions
            </p>
        </div>
        <div class="faqs">



            <div class="accordion faqs__information " id="faq">
                <% for (let faq of faqs){%>
                <div class="accordion-item mb-5">
                    <h2>
                        <button class="accordion-button collapsed faqs__header" type="button" data-bs-toggle="collapse"
                            data-bs-target="#accordion<%=faq._id%>" aria-expanded="true" aria-controls="collapseOne">
                            <%=faq.question%>

                        </button>
                    </h2>
                    <div id="accordion<%=faq._id%>" class="accordion-collapse collapse" aria-labelledby="headingOne"
                        data-bs-parent="#faq">
                        <div class="accordion-body right-text">
                            <%=faq.answer%>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>


        </div>

    </section>
</main>