<% layout('layouts/boilerplate')%>

<section class="container  u-margin-top-big">
    <h3 class="secondary-heading">Create a new listing</h3>

    <div class="login mx-auto mt-5">
        <div class="login__details">
            <form action="createListing" method="POST" enctype="multipart/form-data" novalidate class="validated-form">
                <div class="login__username mt-5">
                    <label for="type" class="">Type of listing</label>
                    <select class="form-select login__select" name="type" id="type" required>
                        <option value="brokerage">Brokerage</option>
                        <option value="landSales">Land Sales</option>
                        <option value="propertyManagement">Property Management</option>
                    </select>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please select a listing type.
                    </div>
                </div>
                <div class="login__username">
                    <label for="title" class="">Enter the title of the listing</label>
                    <input type="text" placeholder="Title" name="title" id="title" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter the title of the listing.
                    </div>
                </div>
                <div class="login__username">
                    <label for="image" class="">Image</label>
                    <input class="form-control" type="file" name="listingImage" placeholder="Choose file" id="image"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please select an image.
                    </div>
                </div>
                <div class="login__username">
                    <label for="location" class="">Enter the location of the property</label>
                    <input class="form-control" type="text" placeholder="Location" name="location" id="location"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter the location of the listing.
                    </div>
                </div>
                <div class="login__username">
                    <label for="price" class="">Enter the price</label>
                    <input class="form-control" type="text" placeholder="Price" name="price" id="price" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter the price of the listing.
                    </div>
                </div>

                <div class="login__password">
                    <label for="description">Description</label>
                    <textarea class="form-control login__textarea" name="description" id="exampleFormControlTextarea1"
                        rows="6" required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter the description of the listing
                    </div>
                </div>




                <a href="userListings" class="login__btn login__btn-cancel ms-auto">Cancel</a>
                <button class="login__btn login__btn-save ms-auto">Save</button>
            </form>
        </div>
    </div>
    </div>
</section>